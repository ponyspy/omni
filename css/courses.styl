.courses_block
	clear both
	.course_block
		background-color white
		overflow hidden
		padding-bottom 5px
		border-top 1px solid black
		&:last-child
			border-bottom 1px solid black
		&:hover
			.course_preview_lessons
				opacity 1

		.course_description_block
			padding-top 5px
			padding-bottom 5px
			// padding-right 130px
			overflow hidden
			position relative
			cursor default
			.course_langs
				width 100px
				margin-right 60px
				float left
				overflow hidden
				font 10pt/14pt 'Pragmatica'
				.lang
					margin-right 5px
					float left
			.course_title
				// min-width 340px
				min-width 200px
				margin-right 100px
				float left
			.course_subscribe
				padding-left 3px
				padding-right 3px
				border 1px solid black
				background-color white
				position absolute
				right 0
				font 8pt/12pt 'Pragmatica'
				&:hover
					cursor default
					color white
					background-color black

		.course_preview_lessons
			cursor default
			overflow hidden
			position absolute
			opacity 0
			&.hide
				opacity 0
			.preview_circle
				line-height 10px
				float left
				margin-right 5px

		.course_lessons_block
			overflow hidden
			display none
			margin-left -25px
			margin-bottom 15px

		.course_tags_block
			font 10pt/14pt 'Pragmatica'
			margin-top 10px
			.tag
				float left
				margin-right 5px
				cursor pointer
				&:hover
					color grey
				&:before
					content '#'

.lesson_chapter
	margin-bottom 30px
	background-color white
	&:last-child
		margin-bottom 0px
	.chapter_title
		display inline-block
		outline none
		margin-bottom 5px
	.section_block
		background-color white
		padding-top 5px
		padding-bottom 5px
		border-top 1px solid black
		overflow hidden
		&:last-child
			border-bottom 1px solid black
		.section_description
			overflow hidden
			cursor default
			.section_type
				width 110px
				float left
				margin-right 50px
			.section_title
				float left
				outline none
		.section_body
			padding-left 160px
			display none
			outline none
			img
				width 100%